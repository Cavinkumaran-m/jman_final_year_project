generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model courses {
  course_id           Int    @id(map: "PK_courses")
  course_title        String @db.NVarChar(100)
  num_subscribers     Int
  num_reviews         Int    @db.SmallInt
  num_lectures        Int    @db.SmallInt
  level               String @db.NVarChar(50)
  content_duration    Float
  published_timestamp String @db.NVarChar(50)
  subject             String @db.NVarChar(50)
}

model users {
  FullName     String    @db.NVarChar(100)
  UserName     String    @id(map: "PK__users__C9F284576B039D3A") @db.NVarChar(100)
  Email        String    @unique(map: "UQ__users__A9D1053440663212") @db.NVarChar(255)
  PasswordHash String    @db.NVarChar(255)
  Role         String    @default("employee", map: "DF__users__Role__4F7CD00D") @db.NVarChar(50)
  RegisteredAt DateTime? @default(now(), map: "DF__users__Registere__5070F446") @db.DateTime
}
